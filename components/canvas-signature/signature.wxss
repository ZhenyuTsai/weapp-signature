page {
  background: #fbfbfb;
  height: auto;
  overflow: hidden;
}
.vertical {
  width: 100%;
  height: 95vh;
  margin: 30rpx 0;
  overflow: hidden;
  display: flex;
  align-content: center;
  flex-direction: row;
  justify-content: center;
  font-size: 28rpx;
}
.vertical .handRight {
  display: inline-flex;
  align-items: center;
}
.vertical .handRight .handTitle {
  transform: rotate(90deg);
  flex: 1;
  color: #666;
}
.vertical .handCenter {
  border: 4rpx dashed #e9e9e9;
  flex: 5;
  overflow: hidden;
  box-sizing: border-box;
}
.vertical .handCenter .handWriting {
  background: #fff;
  width: 100%;
  height: 95vh;
}
.vertical .handBtn {
  height: 95vh;
  display: inline-flex;
  flex-direction: column;
  justify-content: space-between;
  align-content: space-between;
  flex: 1;
}
.vertical .handBtn button {
  font-size: 28rpx;
}
.vertical .handBtn .delBtn {
  position: absolute;
  top: 250rpx;
  left: 0rpx;
  transform: rotate(90deg);
  color: #666;
}
.vertical .handBtn .delBtn image {
  position: absolute;
  top: 13rpx;
  left: 25rpx;
}
.vertical .handBtn .subBtn {
  position: absolute;
  bottom: 52rpx;
  left: -3rpx;
  display: inline-flex;
  transform: rotate(90deg);
  background: #008ef6;
  color: #fff;
  margin-bottom: 30rpx;
  text-align: center;
  justify-content: center;
}
.vertical .handBtn .black-select {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 30rpx;
  left: 25rpx;
}
.vertical .handBtn .black-select.color_select {
  width: 90rpx;
  height: 90rpx;
  top: 30rpx;
  left: 10rpx;
}
.vertical .handBtn .red-select {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 140rpx;
  left: 25rpx;
}
.vertical .handBtn .red-select.color_select {
  width: 90rpx;
  height: 90rpx;
  top: 120rpx;
  left: 10rpx;
}
.horizontal {
  width: 100%;
  overflow: hidden;
  font-size: 28rpx;
}
.horizontal .handRight {
  display: flex;
  align-items: center;
  justify-content: center;
}
.horizontal .handRight .handTitle {
  color: #666;
}
.horizontal .handCenter {
  margin: 30rpx;
  border: 4rpx dashed #e9e9e9;
  overflow: hidden;
  box-sizing: border-box;
}
.horizontal .handCenter .handWriting {
  background: #fff;
  height: 60vh;
  width: 100%;
}
.horizontal .handBtn {
  padding: 0 45rpx;
  display: flex;
  justify-content: space-between;
  flex: 1;
}
.horizontal .handBtn button {
  font-size: 28rpx;
  display: inline-block;
}
.horizontal .handBtn button + button {
  margin-left: 15rpx;
}
.horizontal .handBtn .delBtn {
  color: #666;
}
.horizontal .handBtn .subBtn {
  background: #008ef6;
  color: #fff;
}
.horizontal .handBtn .black-select {
  width: 60rpx;
  height: 60rpx;
  border: 15rpx solid transparent;
}
.horizontal .handBtn .black-select.color_select {
  width: 90rpx;
  height: 90rpx;
  border: none;
}
.horizontal .handBtn .red-select {
  width: 60rpx;
  height: 60rpx;
  border: 15rpx solid transparent;
}
.horizontal .handBtn .red-select.color_select {
  width: 90rpx;
  height: 90rpx;
  border: none;
}
